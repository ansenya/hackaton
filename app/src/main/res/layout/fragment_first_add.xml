<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentFirstAdd"
    android:orientation="vertical">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="4dp"
        android:drawableTop="@drawable/vector">
    </ImageView>

    <TextView
        android:id="@+id/rect"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rectangle_3"
        android:backgroundTint="@color/dots_color"
        android:textSize="12sp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:text="Мои объявления"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:id="@+id/title">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12850p"
        android:layout_marginTop="21dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/title"
        android:id="@+id/profit">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="принесли продажи"
        android:textSize="12sp"
        android:layout_alignLeft="@id/rect"
        android:layout_alignTop="@id/rect"
        android:layout_alignRight="@id/rect"
        android:textColor="#000000"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profit"
        android:layout_alignBottom="@id/rect">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Активные"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:id="@+id/list"
        android:layout_below="@+id/profit">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:textSize="12sp"
        android:id="@+id/items_count"
        android:layout_below="@+id/profit">
    </TextView>

    <Button
        android:id="@+id/ad"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_2"
        app:backgroundTint="#84AF83"
        android:text="Разместить объявление"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="11sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_below="@+id/list"
        android:layout_marginTop="13dp" />

</RelativeLayout>