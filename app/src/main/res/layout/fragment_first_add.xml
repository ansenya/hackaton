<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentFirstAdd"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Мои объявления"
        android:layout_marginLeft="8dp"
        android:id="@+id/title">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12850p"
        android:layout_marginTop="21dp"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/title"
        android:id="@+id/profit">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="принесли продажи"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/title">
    </TextView>

    <TextView
        android:layout_width="370dp"
        android:layout_marginLeft="8dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_3"
        android:backgroundTint="@color/dots_color"
        android:textSize="12sp"
        android:layout_below="@+id/title">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Активные"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:id="@+id/list"
        android:layout_below="@+id/profit">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:textSize="12sp"
        android:id="@+id/items_count"
        android:layout_below="@+id/profit">
    </TextView>

    <Button
        android:id="@+id/ad"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_2"
        app:backgroundTint="#84AF83"
        android:text="Разместить объявление"
        android:textColor="@color/white"
        android:layout_below="@+id/recycler_view"
        android:textSize="11sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/list" />

</RelativeLayout>